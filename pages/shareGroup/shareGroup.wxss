/* pages/shareGroup/shareGroup.wxss */
page {
  height: 100%;
}
.up {
  width: 100%;
  height: 30%;
  position: absolute;
  background-color: #e64340;
}
.down {
  position: absolute;
  top: 30%;
  width: 100%;
  height: 70%;
  background-color:	#7ABFFF;
}
.down_up {
  display: inline-block;
  position: absolute;
  top: 15%;
  left: 20rpx; 
}
.down_down{
  display: inline-block;
  position: absolute;
  top: 35%;
  left: 20rpx;
}
.bt {
  position: relative;
  top: 60%;
}
.begin {
  width: 300rpx;
  text-align: center;
  height: 100rpx;
  color: white;
  border: 1rpx solid white;
  border-radius: 40rpx;
  background-color: #7ABFFF;
}
.invitation {
  position: relative;
  top: 40%;
  width: 300rpx;
  text-align: center;
  height: 100rpx;
  color: white;
  border: 1rpx solid white;
  border-radius: 40rpx;
  background-color: #e64340;
}

.portrait {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid white;
  margin-left: 100rpx;
  margin-bottom: 20rpx;
}
.click {
  background-color: #D04340; 
}
.clickbegin {
  background-color: #1E90EF;
}